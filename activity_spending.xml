<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffeb3b"
    tools:context="view.SpendingActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/textView19"
        android:layout_alignStart="@+id/edtBalance"
        android:autofillHints="Enter expense"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/description"
        android:id="@+id/textView19"
        android:layout_alignBottom="@+id/edtDescription"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtBalance"
        android:layout_below="@+id/edtDescription"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/edtEmissionDate"
        android:autofillHints="Enter Expense Amount"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/amount"
        android:id="@+id/textView20"
        android:layout_alignBottom="@+id/edtBalance"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edtEmissionDate"
        android:layout_below="@+id/edtBalance"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView21"
        android:importantForAutofill="no"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/emission_date"
        android:id="@+id/textView21"
        android:layout_alignBottom="@+id/edtEmissionDate"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spnCategory"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/edtEmissionDate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="#ffe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/category"
        android:id="@+id/textView22"
        android:layout_alignBottom="@+id/spnCategory"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spnAccount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/spnCategory"
        android:layout_alignStart="@+id/spnCategory"
        android:layout_alignEnd="@+id/spnCategory"
        android:layout_marginTop="10dp"
        android:background="#ffe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/account"
        android:id="@+id/textView23"
        android:layout_alignBottom="@+id/spnAccount"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spnCard"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/spnAccount"
        android:layout_alignStart="@+id/spnAccount"
        android:layout_alignEnd="@+id/spnAccount"
        android:layout_marginTop="10dp"
        android:background="#ffe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/credit_card"
        android:id="@+id/textView24"
        android:layout_alignBottom="@+id/spnCard"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/choice_debiting"
        android:id="@+id/textView25"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clean"
        android:id="@+id/btnClean"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/btnSubmit"
        android:layout_alignBottom="@+id/btnClean"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/spending"
        android:contentDescription="@string/spending" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView25"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView25"
        android:layout_above="@+id/btnSubmit"
        android:weightSum="1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debit"
            android:id="@+id/rbDebit"
            android:layout_weight="0.30"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card"
            android:id="@+id/rbCard"
            android:layout_weight="0.21" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spending_registration"
        android:id="@+id/textView38"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:textAlignment="center"
        android:textColor="#D6104F"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>